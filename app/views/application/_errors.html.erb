 <% if model.errors.any? %>
        <div id="error_explanation">
        <h3>Please fix <%= pluralize(model.errors.count, "error") %> below:</h3>
        <ul>
            <% model.errors.each do |error| %>
                <li><%= error.full_message %></li>
            <% end %>
        </ul>
        </div>
  <% end %>