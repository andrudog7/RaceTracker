<div style="padding-left: 20px">  
    <h1 style="text-align:left">Edit Your Race</h1>
    <% if @race.errors.any? %>
        <div id="error_explanation">
        <h3>Please fix <%= pluralize(@race.errors.count, "error") %> below:</h3>
        <ul>
            <% @race.errors.each do |error| %>
                <li><%= error.full_message %></li>
            <% end %>
        </ul>
        </div>
  <% end %>
    <%=render 'form'%>
</div>  