<%=@race.name%><br>
    <%=@race.location%><br>
    <%=@race.date_format%><br>
    <%=@race.type.name%><br>
    <%=@race.type.distance%><br><br>
    <%=form_with(model: @race) do |f|%>
    <%=f.fields_for :statistic, @statistic do |s|%>
        <%=render partial: 'stats_fields', locals: {s: s}%>
        <%=s.hidden_field :id%>
        <%=s.submit "Add Stats"%>
        <%end%>
    <%end%>
