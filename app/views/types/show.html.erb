<h1><%=@type.name%>'s</h1>
<ul class="public_races">
    <%Type.public_races(@type.name).each do |race|%>
    <ul class="individual_public_race">
        <li><h3 class="race_link"><%=link_to race.name, race_path(race)%></h3></li>
        <li><%=race.location%></li>
        <li><%=race.type.distance%> miles</li>
        <li><%=race.users.count%> finishers</li>
    </ul>
    <%end%>
    </ul>
