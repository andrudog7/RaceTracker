<div style="padding-left: 20px">
<h1>My <%=@type.name%>s</h1>
    <p>
    <table class = "finisher_stats">
        <thead>
        <caption><h3 style="text-align: center"></h3></caption>
            <tr>
                <th></th>
                <th><%=link_to "Race", type_path(@type, sort: "name")%></th>
                <th><%=link_to "Location", type_path(@type, sort: "location")%></th>
                <th>Date</th>
                <th><%=link_to "Finish Time", type_path(@type, sort: "finish_time")%></th>
                <th>Pace</th>
                <th><%=link_to "Likes", type_path(@type, sort: "likes")%></th>
            </tr>
        </thead>
        <body>
            <%@my_stats.each_with_index do |stat, index|%>
            <tr>
                <td><%=index + 1%></td>
                <td><%=link_to stat.race.display_name, race_statistics_path(stat.race), style: "text-decoration:none"%></td>
                <td><%=stat.race.location%></td>
                <td><%=stat.race.date_format%></td>
                <td><%=current_user_stats(stat.race).finish_time_format%></td>
                <td><%=current_user_stats(stat.race).finish_pace_format%></td>
                <td><%=stat.likes.count%> <%=current_user_like_link(stat)%></td>
            </tr>
            <%end%>
        </body>
    </table>
    </p>
</div>